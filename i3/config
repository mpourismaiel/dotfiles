# {{{ Custom hotkeys
# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec $nsi pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec $nsi pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec $nsi pactl set-sink-mute 0 toggle # mute sound

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight + 10 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight - 10 # decrease screen brightness

# Workspace
bindsym $mod+comma workspace prev
bindsym $mod+period workspace next

# Lockscreen
bindsym $mod+Shift+x exec betterlockscreen --lock blur

# Monitor setup
bindsym $mod+$alt+s exec sh /home/mahdi/.screenlayout/single-screen-full-hd.sh
bindsym $mod+$alt+d exec sh /home/mahdi/.screenlayout/dual-screen-full-hd.sh

# Screenshot
bindsym --release Print exec $nsi "maim -p 0 -c 0.96,0.5,0.09 $HOME/Pictures/screenshot-$(date +%Y-%m-%d_%H-%M-%S).png"
bindsym --release Shift+Print exec $nsi "maim -s -p 0 -c 0.96,0.5,0.09 $HOME/Pictures/screenshot-$(date +%Y-%m-%d_%H-%M-%S).png"
# }}}

