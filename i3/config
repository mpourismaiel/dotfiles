# in case of layout change event - send signal to i3blocks
bindsym ISO_Next_Group exec pkill -RTMIN+1 i3blocks
# in case of caps or num lock event - send signal to i3blocks
bindsym --release Caps_Lock exec pkill -SIGRTMIN+11 i3blocks
bindsym --release Num_Lock  exec pkill -SIGRTMIN+11 i3blocks

# {{{ Reside Mode
# resize window (you can also use the mouse for that)
bindsym $mod+Shift+r mode "resize"
mode "resize" {
    # These bindings trigger as soon as you enter the resize mode

    # Pressing left will shrink the window’s width.
    # Pressing right will grow the window’s width.
    # Pressing up will shrink the window’s height.
    # Pressing down will grow the window’s height.
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
# }}}

# {{{ Nautilus Mode
bindsym $mod+Shift+p mode "$mode_nautilus"
set $mode_nautilus Places (H)ome (P)rojects (D)ownloads Pi(c)tures
mode "$mode_nautilus" {
    bindsym h exec nautilus /home/mahdi, mode "default"
    bindsym p exec nautilus /home/mahdi/Documents/projects, mode "default"
    bindsym d exec nautilus /home/mahdi/Downloads, mode "default"
    bindsym c exec nautilus /home/mahdi/Pictures, mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
# }}}

# {{{ Exit Mode
set $mode_logout_sure Logging out? (y)es, (n)o
mode "$mode_logout_sure" {
    bindsym y exec i3-msg exit, mode "default"
    bindsym n mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

set $mode_reboot_sure Rebooting? (y)es, (n)o
mode "$mode_reboot_sure" {
    bindsym y exec systemctl reboot
    bindsym n mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

set $mode_shutdown_sure Shutting Down? (y)es, (n)o
mode "$mode_shutdown_sure" {
    bindsym y exec systemctl poweroff
    bindsym n mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

set $mode_suspend_sure Suspending? (y)es, (n)o
mode "$mode_suspend_sure" {
    bindsym y exec betterlockscreen --lock blur && systemctl suspend, mode "default"
    bindsym n mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

set $mode_hibernate_sure Hibernating? (y)es, (n)o
mode "$mode_hibernate_sure" {
    bindsym y exec betterlockscreen --lock blur && systemctl hibernate, mode "default"
    bindsym n mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Shift+e mode "$mode_system"
set $mode_system (l)ock, log(o)ut, (r)eboot, (s)hut down, s(u)spend, (h)ibernate
mode "$mode_system" {
    bindsym l exec betterlockscreen --lock blur, mode "default"
    bindsym o mode "$mode_logout_sure"
    bindsym r mode "$mode_reboot_sure"
    bindsym s mode "$mode_shutdown_sure"
    bindsym u mode "$mode_suspend_sure"
    bindsym h mode "$mode_hibernate_sure"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
# }}}

